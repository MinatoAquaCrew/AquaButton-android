<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/subscribe_button_radius" />
            <size android:height="@dimen/subscribe_button_size" />
            <solid android:color="@color/subscribe_button_background" />
        </shape>
    </item>
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/subscribe_button_radius" />
            <size android:height="@dimen/subscribe_button_size" />
            <solid android:color="?android:colorControlActivated" />
        </shape>
    </item>
</ripple>