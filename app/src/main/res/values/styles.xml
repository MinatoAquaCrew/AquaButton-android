<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="appBarPopupTheme">@style/ThemeOverlay.AquaButton.AppBarPopupTheme</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransparentUi" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.AquaButton.TextInputLayout.MainSearch"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?android:textColorSecondary</item>
        <item name="hintTextColor">?android:textColorSecondary</item>
    </style>

    <style name="ThemeOverlay.AquaButton.AppBarPopupTheme"
        parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="ThemeOverlay.AquaButton.TextInputEditText.MainSearch"
        parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="android:colorControlActivated">?android:textColorPrimary</item>
    </style>

    <style name="Widget.AquaButton.SubscribeButton" parent="Widget.MaterialComponents.TextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/subscribe_button_background</item>
        <item name="android:layout_height">@dimen/subscribe_button_size</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/subscribe_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/subscribe_button_radius</item>
        <item name="android:paddingEnd">@dimen/subscribe_button_radius</item>
    </style>

</resources>