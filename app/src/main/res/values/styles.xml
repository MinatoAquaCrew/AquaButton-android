<resources>

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <!-- Default implementation -->
    </style>

    <style name="AppTheme.TransparentUi" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Widget.AquaButton.TextInputLayout.MainSearch"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?android:textColorSecondary</item>
        <item name="hintTextColor">?android:textColorSecondary</item>
    </style>

    <style name="ThemeOverlay.AquaButton.TextInputEditText.MainSearch"
        parent="@style/ThemeOverlay.MaterialComponents.Dark">
        <item name="android:colorControlActivated">?android:textColorPrimary</item>
    </style>

</resources>